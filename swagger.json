{
  "openapi": "3.0.0",
  "info": {
    "title": "API de Tejelanas Vivi",
    "version": "1.0.0",
    "description": "API REST para la gestión de productos y talleres del emprendimiento Tejelanas Vivi."
  },
  "servers": [
    {
      "url": "http://localhost/restapi",
      "description": "Servidor de desarrollo"
    }
  ],
  "paths": {
    "/productos": {
      "get": {
        "summary": "Obtener todos los productos",
        "description": "Retorna una lista de todos los productos disponibles en la tienda.",
        "responses": {
          "200": {
            "description": "Operación exitosa.",
            "headers": {
              "X-RateLimit-Limit": {
                "schema": {
                  "type": "integer",
                  "description": "El límite de peticiones por hora."
                },
                "example": 100
              },
              "X-RateLimit-Remaining": {
                "schema": {
                  "type": "integer",
                  "description": "El número de peticiones restantes en la hora actual."
                },
                "example": 95
              },
              "X-RateLimit-Reset": {
                "schema": {
                  "type": "integer",
                  "description": "El timestamp Unix en el que el límite de peticiones se reiniciará."
                },
                "example": 1653571200
              },
              "Cache-Control": {
                "schema": {
                  "type": "string",
                  "description": "Directivas de control de caché."
                },
                "example": "public, max-age=3600"
              },
              "ETag": {
                "schema": {
                  "type": "string",
                  "description": "Etiqueta de entidad para la validación de caché."
                },
                "example": "W/\"abcdef12345\""
              }
            },
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Producto"
                  }
                },
                "examples": {
                  "list_of_products": {
                    "value": [
                      {
                        "id": 6,
                        "nombre": "Ovillo de Lana de Alpaca",
                        "descripcion": "Lana suave y natural de alta calidad, ideal para prendas de invierno.",
                        "precio": 5500,
                        "stock": 25,
                        "categoria": "Lanas Natural"
                      },
                      {
                        "id": 1,
                        "nombre": "Lana de bebe",
                        "descripcion": "Lana 100% merino, súper suave y perfecta para prendas de bebé.",
                        "precio": 5000,
                        "categoria": "lanas suaves",
                        "stock": 45
                      }
                    ]
                  }
                }
              }
            }
          },
          "500": {
            "description": "Error interno del servidor.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                },
                "example": {
                  "mensaje": "No se pudo conectar a la base de datos."
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Crear un nuevo producto",
        "description": "Agrega un nuevo producto a la tienda.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Producto"
              },
              "example": {
                "nombre": "Kit de Tejedora Principiante",
                "descripcion": "Kit completo con agujas, lanas y patrones para empezar a tejer.",
                "precio": 25000,
                "categoria": "Kits",
                "stock": 10
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Producto creado exitosamente.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Producto"
                },
                "example": {
                  "id": 7,
                  "nombre": "Kit de Tejedora Principiante",
                  "descripcion": "Kit completo con agujas, lanas y patrones para empezar a tejer.",
                  "precio": 25000,
                  "categoria": "Kits",
                  "stock": 10
                }
              }
            }
          },
          "400": {
            "description": "Solicitud inválida, faltan campos requeridos.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                },
                "example": {
                  "mensaje": "Faltan campos requeridos para ingresar un nuevo producto"
                }
              }
            }
          },
          "500": {
            "description": "Error interno del servidor.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                },
                "example": {
                  "mensaje": "Error al ingresar el producto"
                }
              }
            }
          }
        },
        "security": [
          {
            "ApiKeyAuth": []
          }
        ]
      }
    },
    "/productos/{id}": {
      "get": {
        "summary": "Obtiene un Producto por su ID.",
        "description": "Retorna los detalles de un producto específico.",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "description": "ID del Producto a obtener.",
            "schema": {
              "type": "integer"
            },
            "example": 6
          }
        ],
        "responses": {
          "200": {
            "description": "Producto encontrado.",
            "headers": {
              "X-RateLimit-Limit": {
                "schema": {
                  "type": "integer",
                  "description": "El límite de peticiones por hora."
                },
                "example": 100
              },
              "X-RateLimit-Remaining": {
                "schema": {
                  "type": "integer",
                  "description": "El número de peticiones restantes en la hora actual."
                },
                "example": 95
              },
              "X-RateLimit-Reset": {
                "schema": {
                  "type": "integer",
                  "description": "El timestamp Unix en el que el límite de peticiones se reiniciará."
                },
                "example": 1653571200
              },
              "Cache-Control": {
                "schema": {
                  "type": "string",
                  "description": "Directivas de control de caché."
                },
                "example": "public, max-age=3600"
              },
              "ETag": {
                "schema": {
                  "type": "string",
                  "description": "Etiqueta de entidad para la validación de caché."
                },
                "example": "W/\"abcdef12345\""
              }
            },
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Producto"
                },
                "example": {
                  "id": 6,
                  "nombre": "Ovillo de Lana de Alpaca",
                  "descripcion": "Lana suave y natural de alta calidad, ideal para prendas de invierno.",
                  "precio": 5500,
                  "stock": 25,
                  "categoria": "Lanas Natural"
                }
              }
            }
          },
          "404": {
            "description": "Producto no encontrado.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                },
                "example": {
                  "mensaje": "Producto no encontrado."
                }
              }
            }
          }
        }
      },
      "put": {
        "summary": "Actualiza un producto por su ID.",
        "description": "Actualiza la información completa de un producto existente.",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "description": "ID del Producto a actualizar.",
            "schema": {
              "type": "integer"
            },
            "example": 6
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Producto"
              },
              "example": {
                "nombre": "Ovillo de Lana de Alpaca XL",
                "descripcion": "Lana suave y natural de alta calidad, ovillo de 100gr ideal para prendas de invierno.",
                "precio": 6000,
                "categoria": "Lanas Natural",
                "stock": 20
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Producto actualizado exitosamente.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Producto"
                },
                "example": {
                  "id": 6,
                  "nombre": "Ovillo de Lana de Alpaca XL",
                  "descripcion": "Lana suave y natural de alta calidad, ovillo de 100gr ideal para prendas de invierno.",
                  "precio": 6000,
                  "categoria": "Lanas Natural",
                  "stock": 20
                }
              }
            }
          },
          "404": {
            "description": "Producto no encontrado o sin cambios.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                },
                "example": {
                  "mensaje": "Producto no encontrado."
                }
              }
            }
          },
          "400": {
            "description": "Solicitud inválida (ej. datos incorrectos).",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                },
                "example": {
                  "mensaje": "Faltan campos requeridos para actualizar el producto."
                }
              }
            }
          }
        },
        "security": [
          {
            "ApiKeyAuth": []
          }
        ]
      },
      "delete": {
        "summary": "Elimina un producto por su ID.",
        "description": "Elimina un producto de la base de datos de forma permanente.",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "description": "ID del Producto a eliminar.",
            "schema": {
              "type": "integer"
            },
            "example": 6
          }
        ],
        "responses": {
          "204": {
            "description": "Producto eliminado exitosamente. (Sin contenido)."
          },
          "404": {
            "description": "Producto no encontrado.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                },
                "example": {
                  "mensaje": "Producto con ID 99 no encontrado."
                }
              }
            }
          }
        },
        "security": [
          {
            "ApiKeyAuth": []
          }
        ]
      }
    },
