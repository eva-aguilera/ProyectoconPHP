  "components": {
    "securitySchemes": {
      "ApiKeyAuth": {
        "type": "apiKey",
        "in": "header",
        "name": "X-API-Key"
      }
    },
    "schemas": {
      "Producto": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "description": "ID único del Producto.",
            "readOnly": true
          },
          "nombre": {
            "type": "string",
            "description": "Nombre del Producto."
          },
          "descripcion": {
            "type": "string",
            "description": "Descripción del Producto."
          },
          "precio": {
            "type": "number",
            "format": "float",
            "description": "Precio del producto en CLP"
          },
          "categoria": {
            "type": "string",
            "description": "Categoría del producto (ej: Lanas, Vellón)"
          },
          "stock": {
            "type": "integer",
            "description": "Cantidad de unidades en stock"
          }
        },
        "required": [
          "nombre",
          "descripcion",
          "precio",
          "stock",
          "categoria"
         ]
      },
      "Taller": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "description": "ID único del Taller.",
            "readOnly": true
          },
          "nombre": {
            "type": "string",
            "description": "Nombre del Taller."
          },
          "descripcion": {
            "type": "string",
            "description": "Descripción detallada del Taller."
          },
          "precio": {
            "type": "number",
            "format": "float",
            "description": "Precio del Taller en CLP."
          },
          "cupos_disponibles": {
            "type": "integer",
            "description": "Número de cupos disponibles."
          },
          "fecha": {
            "type": "string",
            "format": "date",
            "description": "Fecha de realización del Taller."
          },
          "duracion": {
            "type": "integer",
            "description": "Duración del Taller en horas."
          }
        },
        "required": [
          "nombre",
          "descripcion",
          "fecha",
          "ubicacion",
          "precio",
          "cupo_maximo",
          "imgen_url"
        ]
      },
      "Error": {
        "type": "object",
        "properties": {
          "mensaje": {
            "type": "string",
            "description": "Mensaje de error."
          }
        },
        "required": [
          "mensaje"
        ]
      }
    }
  }
}